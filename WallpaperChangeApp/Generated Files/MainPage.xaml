<Page
    x:Class="WallpaperChangeApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WallpaperChangeApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel x:ConnectionId='1' x:Name="contentPanel" Margin="50, 50, 50, 50">
            <TextBlock HorizontalAlignment="Center" Text="Daily.World" FontSize="36" Style="{StaticResource HeaderTextBlockStyle}"/>

            <Button x:ConnectionId='2' HorizontalAlignment="Center"  VerticalAlignment="Center" Name="activateWallpaperChangeBackgroundTaskBtn" Content="Activate BackgroundTask"                                           RenderTransformOrigin="0.444,4.094" />
            <Button x:ConnectionId='3' HorizontalAlignment="Center"  VerticalAlignment="Center" Name="deactivateWallpaperChangeBackgroundTaskBtn" Content="Deactivate BackgroundTask"                                             RenderTransformOrigin="0.444,4.094" />
            <TextBlock x:ConnectionId='4' x:Name="Status" TextWrapping="Wrap" Text="Unregistered" HorizontalAlignment="Center" />
            <TextBlock x:ConnectionId='5' x:Name="Progress" TextWrapping="Wrap" Text="Progress: " HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>

